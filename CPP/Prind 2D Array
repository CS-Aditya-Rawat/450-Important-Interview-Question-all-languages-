
#include <iostream>
using namespace std;
int main() {
    
    int a[30][30];
    int row,col;
    cout<<"Enter the rows and columns :";
    cin>>row>>col;
    cout<<"Enter the Matrix :"<<endl;
    for(int i=0;i<row;i++)
    {
        for(int j=0;j<col;j++)
        {
            cin>>a[i][j];
        }
    }
    for(int i=0;i<row;i++)
    {
        for(int j=0;j<row-i;j++)
        {
            for(int k=0;k<col;k++)
            {
                cout<<a[i][k]<<" ";
            }cout<<endl;
        }
    }

    return 0;
}
